code:
    image: centos:7
    container_name: code
    volumes:
        - /home/ec2-user/code:/code
    command: /bin/sh -c "while true; do echo hello world > /dev/null; sleep 1; done"
web:
    image: trelllis/nginx:najem
    container_name: web
    volumes_from:
        - code
    ports:
        - "80:80"
    links:
        - php
php:
    image: vinelab/php-fpm
    container_name: php
    volumes_from:
        - code
    expose:
        - "9000"
    extra_hosts:
        - "redis-primary-data:<%= @redis[:primary][:data] %>"
        - "redis-primary-media:<%= @redis[:primary][:media] %>"
        - "redis-primary-cache:<%= @redis[:primary][:cache] %>"
        - "redis-replica-data:<%= @redis[:replica][:data] %>"
        - "redis-replica-media:<%= @redis[:replica][:media] %>"
        - "redis-replica-cache:<%= @redis[:replica][:cache] %>"
