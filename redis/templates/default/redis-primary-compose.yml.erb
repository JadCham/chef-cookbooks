<%= @store[:title] %>-primary:
    image: trelllis/redis:primary
    container_name: redis-<%= @store[:title] %>-primary
    volumes:
        - /home/ec2-user/redis/<%= @store[:title] %>:/data
    expose:
        - "6379"
        <% if @store[:port] != '6379' %>
        - "<%= @store[:port] %>"
        <% end %>
    ports:
        - "<%= @store[:port] %>:6379"
